            <Label Content="Desencriptada:" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" Margin="10" VerticalAlignment="Top"/>
            <TextBlock x:Name="lblDesencriptada" ScrollViewer.CanContentScroll="True" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left" Margin="10" VerticalAlignment="Top" Width="620"/>
